[alias]
    ci = commit
    st = status
    df = difftool --dir-diff
    mt = mergetool -t meld
[diff]
    tool = meld
[difftool "meld"]
    cmd = meld $LOCAL $REMOTE
[merge]
    tool = meld
[mergetool "meld"]
    prompt = false
    keepBackup = true
    keepTemporaries = false
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"

!-- Solarized color scheme: http://ethanschoonover.com/solarized --!

! special colors
*background:              #002b36
*foreground:              #839496
*fading:                  40
*fadeColor:               #002b36
*cursorColor:             #93a1a1
*pointerColorBackground:  #586e75
*pointerColorForeground:  #93a1a1
! black
*color0:                  #073642
*color8:                  #002b36
! red
*color1:                  #dc322f
*color9:                  #cb4b16
! green
*color2:                  #859900
*color10:                 #586e75
! yellow
*color3:                  #b58900
*color11:                 #657b83
! blue
*color4:                  #268bd2
*color12:                 #839496
! magenta
*color5:                  #d33682
*color13:                 #6c71c4
! cyan
*color6:                  #2aa198
*color14:                 #93a1a1
! white
*color7:                  #eee8d5
*color15:                 #fdf6e3


!-- Global settings --!
Xft*rgba: none
Xcursor.theme: ize-vision

!-- URxvt settings --!
URxvt*transparent: false
URxvt*shading: 40
URxvt*saveLines: 12000
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*intensityStyles: false
!-- URxvt*internalBorder: 9 --!

! -- Fonts -- !
URxvt*font: xft:Ubuntu Mono:size=12
URxvt*boldFont: xft:Ubuntu Mono:size=12:bold

! -- Extension -- !
URxvt.iso14755: false
URxvt.perl-ext-common: default,keyboard-select,clipboard
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob
URxvt.clipboard.autocopy: true

! -- Keys -- !
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.S-C-C: perl:clipboard:copy
URxvt.keysym.S-C-V: perl:clipboard:paste
URxvt.keysym.C-v:   perl:clipboard:paste_escaped
!Up
!URxvt.keysym.M-i:   \033[A
!Down
!URxvt.keysym.M-k:   \033[B
!Right
!URxvt.keysym.M-l:   \033[C
!Left
!URxvt.keysym.M-j:   \033[D
!Line begin
!URxvt.keysym.M-u:   \033[7~
!Line end
!URxvt.keysym.M-o:   \033[8~
!Delete
!URxvt.keysym.M-f:   \033[3~
!Backspace
!URxvt.keysym.M-d:   \010

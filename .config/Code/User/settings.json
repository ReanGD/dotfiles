{
    "update.mode": "manual",
    "editor.fontFamily": "Pragmata Pro",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "selection",
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "bottom",
    "editor.suggest.localityBonus": true,
    "editor.suggest.filterGraceful": true,
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.inlineSuggest.enabled": true,
    "[go]":  {
        "editor.rulers": [ 130 ],
        "editor.insertSpaces": false,
    },
    "[python]":  {
        "editor.rulers": [ 120 ],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnType": true,
    },
    "[lua]":  {
        "editor.rulers": [ 120 ],
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
    },
    "[cpp]":  {
        "editor.rulers": [ 140 ],
        "editor.insertSpaces": true,
    },
    "[dart]": {
        "editor.rulers": [ 80 ],
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Class name",
                "scope": "entity.name.type, entity.name.class, entity.name.namespace, entity.name.scope-resolution",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#A6E22E"
                }
            },
            {
                "scope": "log.error",
                "settings": {
                    "foreground": "#af1f1f",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.warning",
                "settings": {
                    "foreground": "#ff9900",
                    "fontStyle": ""
                }
            }
        ]
    },
    "window.titleBarStyle": "custom",
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,
    "security.workspace.trust.untrustedFiles": "open",
    "mergeEditor.diffAlgorithm": "advanced",
    "diffEditor.experimental.useVersion2": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.mat": "glsl",
        "*.msh": "hlsl",
        "*.rasi": "glsl",
        "*.config_entries": "json",
        "*.device_registry": "json",
        "*.entity_registry": "json",
        "*.area_registry": "json",
    },
    "workbench.colorTheme": "Monokai",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.decorations.colors": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "extensions.ignoreRecommendations": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "go.coverOnTestPackage": false,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--config=~/projects/work/kraang/ci/.golangci.yml"],
    "go.testFlags": ["-count=1"],
    "go.testTimeout": "120s",
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": false,
    "python.analysis.autoImportCompletions": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.debugJustMyCode": false,
    "dart.debugSdkLibraries": true,
    "dart.debugExternalPackageLibraries": true,
    "git.showProgress": false,
    "git.mergeEditor": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.format": "${message|30?}${agoOrDate|14-}:${author|8}",
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.highlights.enabled": true,
    "todo-tree.general.tags": [
        "FIXME",
        "TODO"
    ],
    "C_Cpp.default.cppStandard": "c++20",
    "sshfs.configs": [
        {
            "host": "hass",
            "name": "hass",
            "privateKeyPath": "$HOME/.ssh/hass",
            "root": "/hass"
        }
    ],
    "testMate.cpp.log.userId": "1111111111111111111111111111111111111111",
    "testMate.cpp.log.logSentry": "disable_3",
    "workspaceExplorer.workspaceStorageDirectory": "/home/rean/projects/workspases",
    "cmake.configureOnOpen": false,
    "cmake.enabledOutputParsers": [
        "cmake",
        "gcc",
        "gnuld"
    ],
    "spellright.language": [
        "en_US",
        "ru_RU"
    ],
    "spellright.documentTypes": [
        "markdown",
        "plaintext"
    ],
    "code-runner.executorMap": {
        "cpp": "cd $dir && clang++ $fileName -std=c++20 -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "python": "python -u",
        "go": "go run",
        "lua": "lua",
        "shellscript": "bash",
    },
    "ansible.ansibleLint.arguments": "-x risky-shell-pipe -x meta-no-info",
    "redhat.telemetry.enabled": false,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": true
    },
    "projectManager.projectsLocation": "$home/projects/workspases",
    "projectManager.supportSymlinksOnBaseFolders": true,
    "projectManager.tags": [
        "home",
        "work"
    ],
    "yaml.customTags": [
        "!encrypted/pkcs1-oaep scalar",
        "!vault scalar"
    ],
    "http.proxySupport": "on",
    // "http.proxyStrictSSL": false,
}

{
    "update.mode": "manual",
    "editor.fontFamily": "Pragmata Pro",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "selection",
    "[go]":  {
        "editor.rulers": [ 130 ],
    },
    "[python]":  {
        "editor.rulers": [ 120 ],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[lua]":  {
        "editor.rulers": [ 120 ],
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
    },
    "[cpp]":  {
        "editor.rulers": [ 140 ],
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Class name",
                "scope": "entity.name.type, entity.name.class, entity.name.namespace, entity.name.scope-resolution",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#A6E22E"
                }
            },
            {
                "scope": "log.error",
                "settings": {
                    "foreground": "#af1f1f",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.warning",
                "settings": {
                    "foreground": "#ff9900",
                    "fontStyle": ""
                }
            }
        ]
    },
    "window.zoomLevel": 0,
    "window.titleBarStyle": "custom",
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.mat": "glsl",
        "*.msh": "hlsl",
        "*.rasi": "glsl",
    },
    "workbench.colorTheme": "Monokai",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.scrollback": 5000,
    "diffEditor.ignoreTrimWhitespace": false,
    "go.coverOnTestPackage": false,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--config=~/projects/work/kraang/ci/.golangci.yml"],
    "go.testFlags": [
        "-count=1",
        // "-gcflags=all=-l"
    ],
    "go.testTimeout": "120s",
    "go.useLanguageServer": true,
    "python.dataScience.askForKernelRestart": false,
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.pylamaEnabled": true,
    "python.linting.pylamaArgs": ["-o", "${env:XDG_CONFIG_HOME}/python/pylama.ini"],
    "python.linting.enabled": true,
    "git.showProgress": false,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.views.compare.files.layout": "list",
    "gitlens.blame.format": "${message|30?}${agoOrDate|14-}:${author|8}",
    "githd.blameView.enabled": false,
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.highlights.enabled": true,
    "todo-tree.general.tags": [
        "FIXME",
        "TODO"
    ],
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.updateChannel": "Insiders",
    "sshfs.configs": [
        {
            "host": "hass",
            "name": "hass",
            "privateKeyPath": "$HOME/.ssh/hass",
            "root": "/hass",
            "username": "rean"
        }
    ],
    "testMate.cpp.log.userId": "1111111111111111111111111111111111111111",
    "testMate.cpp.log.logSentry": "disable_3",
    "workspaceExplorer.workspaceStorageDirectory": "/home/rean/projects/workspases",
    "cmake.configureOnOpen": false,
    "cmake.enabledOutputParsers": [
        "cmake",
        "gcc",
        "gnuld"
    ],
    "spellright.language": [
        "en_US",
        "ru_RU"
    ],
    "spellright.documentTypes": [
        "markdown",
        "plaintext"
    ]
}

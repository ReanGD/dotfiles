{
    "editor.fontFamily": "Pragmata Pro",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "selection",
    "terminal.integrated.scrollback": 5000,
    "[go]":  {
        "editor.rulers": [ 130 ],
    },
    "[cpp]":  {
        "editor.rulers": [ 140 ],
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Class name",
                "scope": "entity.name.type, entity.name.class, entity.name.namespace, entity.name.scope-resolution",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#A6E22E"
                }
            },
            {
                "scope": "log.error",
                "settings": {
                    "foreground": "#af1f1f",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.warning",
                "settings": {
                    "foreground": "#ff9900",
                    "fontStyle": ""
                }
            }
        ]
    },
    "window.zoomLevel": 0,
    "window.enableMenuBarMnemonics": false,
    "files.trimTrailingWhitespace": true,
    "workbench.colorTheme": "Monokai",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "files.associations": {
        "*.mat": "glsl",
        "*.msh": "hlsl",
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "go.coverOnTestPackage": false,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--config=~/projects/work/kraang/ci/.golangci.yml"],
    // "go.testFlags": ["-count=1", "-gcflags=all=-l"],
    "go.testFlags": ["-count=1"],
    "go.formatTool": "goimports",
    "go.testTimeout": "120s",
    "go.useLanguageServer": true,
    "python.dataScience.askForKernelRestart": false,
    "git.showProgress": false,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.views.compare.files.layout": "list",
    "gitlens.blame.format": "${message|30?}${agoOrDate|14-}:${author|8}",
    "todo-tree.regex.regexCaseSensitive": false,
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.updateChannel": "Insiders",
    "sshfs.configs": [
        {
            "host": "hass",
            "name": "hass",
            "privateKeyPath": "$HOME/.ssh/hass",
            "root": "/hass",
            "username": "rean"
        }
    ],
    "todo-tree.highlights.enabled": true,
    "todo-tree.general.tags": [
        "FIXME",
        "TODO"
    ],
    "testMate.cpp.log.userId": "1111111111111111111111111111111111111111",
    "workspaceExplorer.workspaceStorageDirectory": "/home/rean/projects/workspases"
}
